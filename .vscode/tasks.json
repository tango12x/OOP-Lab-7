{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Output Directory",
            "type": "shell",
            "command": "if (!(Test-Path out)) { New-Item -ItemType Directory -Path out }",
            "group": "none",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Build Current File",
            "type": "process",
            "command": "javac",
            "args": [
                "-encoding",
                "UTF-8",
                "-cp",
                "lib/org.json-1.6-20240205.jar;src",
                "-d",
                "out",
                "-sourcepath",
                "src",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "dependsOn": ["Create Output Directory"]
        }
    ]
}